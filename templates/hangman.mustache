<!doctype html>
<html>
    <head>
        <title>Hangman Project</title>
        <link rel="stylesheet" type="text/css" href="styles.css">
        <style>
@import url('https://fonts.googleapis.com/css?family=Indie+Flower');
</style>
    </head>
    <body>
        <div id="header">
            <h1>The Best Version of Hangman of all Time, Probably</h1>
            <h2>{{ gameStatus }}</h2>

             <form method="post" action="/restart">
                {{#playAgain}}
                <input type="submit" value='Do you want to play again?'>
                {{/playAgain}}
            </form>
        </div>

        <h3>You have <span> {{ guessCount }} </span> guesses left</h3>
        
        <h3 id="guessed-letter-alert">{{ guessedLetterAlready }}</h3>
        
        <form method="post" action='/'>
            <label for="guess-box" id="guess-label">Guess a letter</label>
            <input type="text" id="guess-box" name="guessedLetter" maxlength="1">
            <input type="submit" value="Final Answer">
        </form>

        <div id="answer">
           <p>{{ #answerArray }} {{ . }} {{ /answerArray }}</p>
        </div>

        <div id="guessed"> 
            <p>Guessed Letters: {{ #guessedLettersArray }} {{ . }} {{ /guessedLettersArray }}</p> 
        </div>

    </body>
</html>